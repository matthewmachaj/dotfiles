// Place your key bindings in this file to override the defaults
[
  /*****************************************************************************
   * General Key Bindings
   ****************************************************************************/
  /**
   * This is default setting to bring up main modal toolbar for VS Code, but
   * putting in this file so I can't easily lookup what is is
   */
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.showCommands"
  },
  /**
   * Toggle Side-Bar (one w/ Explorer tab)
   */
  {
    "key": "ctrl+a s",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  /**
   * Show User Keybindings
   */
  {
    "key": "alt+k u",
    "command": "workbench.action.openGlobalKeybindingsFile"
  },
  /**
   * Show Default Keybindings
   */
  {
    "key": "alt+k d",
    "command": "workbench.action.openDefaultKeybindingsFile"
  },
  /**
   * Override: find-and-replace (ctrl+h) which doesn't work with Vim
   */
  {
    "key": "ctrl+shift+r",
    "command": "editor.action.startFindReplaceAction"
  },
  /*****************************************************************************
   * Navigation Key Bindings
   ****************************************************************************/
  /**
   * Close editor
   */
  {
    "key": "ctrl+a x",
    "command": "workbench.action.closeActiveEditor"
  },
  /**
   * Switch to next/previous tab within tab group
   */
  {
    "key": "ctrl+j",
    "command": "workbench.action.previousEditorInGroup"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.nextEditorInGroup"
  },
  // { "key": "ctrl+pageup", "command": "workbench.action.previousEditor" },
  // { "key": "ctrl+pagedown", "command": "workbench.action.nextEditor" }
  /**
   * Shift tabs left/right within tab group
   */
  {
    "key": "ctrl+shift+,",
    "command": "workbench.action.moveEditorLeftInGroup"
  },
  {
    "key": "ctrl+shift+.",
    "command": "workbench.action.moveEditorRightInGroup"
  },
  /**
   * Move tabs between tab groups
   */
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.moveEditorToBelowGroup"
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.moveEditorToAboveGroup"
  },
  {
    "key": "ctrl+shift+h",
    "command": "workbench.action.moveEditorToLeftGroup"
  },
  {
    "key": "ctrl+shift+l",
    "command": "workbench.action.moveEditorToRightGroup"
  },
  /**
   * Switch between tab groups
   */
  {
    "key": "ctrl+a o",
    "command": "workbench.action.navigateEditorGroups"
  },
  /**
   * Navigate between all UI groups (Explorer, Terminal, Tab Groups, etc.)
   */
  // {
  //   "key": "ctrl+j",
  //   "command": "workbench.action.navigateDown"
  // },
  // {
  //   "key": "ctrl+k",
  //   "command": "workbench.action.navigateUp"
  // },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  /*****************************************************************************
   * Terminal
   ****************************************************************************/
  {
    "key": "ctrl+alt+q",
    "command": "workbench.action.toggleMaximizedPanel"
    // "when": "!terminalFocus"
  }
  // {
  //   "key": "ctrl+alt+q",
  //   "command": "workbench.action.toggleMaximizedPanel",
  //   "when": "!terminalFocus"
  // }
]
