#===================================================================================
# Editor/vi Setup
#===================================================================================
EDITOR="vi"
FCEDIT="vi"
set -o vi

#===================================================================================
# Custom Bash Additions
#===================================================================================
#--------------------------------------------------------------
# Bashmarks directory completion tool
#--------------------------------------------------------------
if [[ $(command -v l | grep alias) ]]; then
  unalias l 				# required for bashmarks b/c 20.04 .bashrc sets this alias
fi
source_file ~/.local/bin/bashmarks.sh

#--------------------------------------------------------------
# Virtualenvwrapper setup
#--------------------------------------------------------------
default_python_bin=~/pythons/2.7.12/bin
export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=$default_python_bin/python
export VIRTUALENVWRAPPER_VIRTUALENV=$default_python_bin/virtualenv
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--always-copy'
#source ~/pythons/2.7.12/bin/virtualenvwrapper.sh

#--------------------------------------------------------------
# (mm) nodeenvwrapper setup
#--------------------------------------------------------------
#source ~/dotfiles/files/nodeenvwrapper.sh

#--------------------------------------------------------------
# Source LastPass CLI bash completion
#--------------------------------------------------------------
test -f /usr/share/bash-completion/completions/lpass && source /usr/share/bash-completion/completions/lpass

#--------------------------------------------------------------
# Setup Base16 Shell
# https://github.com/chriskempson/base16-shell
#--------------------------------------------------------------
BASE16_SHELL="$HOME/.config/base16-shell/"
[ -n "$PS1" ] && \
    [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
        eval "$("$BASE16_SHELL/profile_helper.sh")"
